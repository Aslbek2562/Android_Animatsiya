<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColorHint="@color/black"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="1234567890"></TextView>
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/stake"
                android:scaleType="centerCrop"
                android:id="@+id/imageview1"></ImageView>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello"></Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_margin="5dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/makron"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageview2"></ImageView>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/audio3"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"
                    android:id="@+id/imageview3"></ImageView>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/makron"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"
                    android:id="@+id/imageview4"></ImageView>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/audio3"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"
                    android:id="@+id/imageview5"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>